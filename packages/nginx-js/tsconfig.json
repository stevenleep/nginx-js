{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@nginx-js/types": ["../types/src"],
      "@nginx-js/utils": ["../utils/src"],
      "@nginx-js/core": ["../core/src"],
      "@nginx-js/interceptors": ["../interceptors/src"],
      "@nginx-js/features": ["../features/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../types" },
    { "path": "../utils" },
    { "path": "../core" },
    { "path": "../interceptors" },
    { "path": "../features" }
  ]
}
