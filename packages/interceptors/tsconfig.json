{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "baseUrl": ".",
    "paths": {
      "@nginx-js/types": ["../types/src"],
      "@nginx-js/core": ["../core/src"],
      "@nginx-js/utils": ["../utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "../types" }, { "path": "../core" }, { "path": "../utils" }]
}
